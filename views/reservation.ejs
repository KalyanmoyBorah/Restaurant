<%- include("partials/header.ejs") %>

<div class="reservation">
  <h2 class="reservationh2">Book your table now</h2>

  <form class="reservationform" action="/reservation" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input name="email" type="email" class="form-control form" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Name</label>
    <input name="name" type="text" class="form-control form" id="exampleInputPassword1" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Date</label>
    <input name="date" type="date" class="form-control form" id="exampleInputPassword1" placeholder="">
  </div>
  <button type="submit" class="btn reservationbtn btn-outline-light">Submit</button>
</form>

</div>






















